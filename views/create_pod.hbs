<div class="container">
  <h1>POD Creator</h1>
  <p>Please follow the below prompts and instructions to create the POD.</p>

  <form id="createForm" action="/submit_form" method="POST">
    <div class="section">
      <h3>Dispatch Details</h3>

      <div>
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required>
      </div>

      <div>
        <label for="client">Client:</label>
        <input type="text" id="client" name="client" required>
      </div>

      <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
      </div>
    </div>

    <button id="createPod">Create POD</button>
  </form>
</div>

<script>
  const createPodButton = document.getElementById('createPod');
  createPodButton.addEventListener('click', (event) => {
    event.preventDefault();
    
    const dateInput = document.getElementById('date');
    
    if (!dateInput.value) {
      alert('Please select a date.'); // Display alert message
      return;
    }
    
    // Disable the button after validation
    createPodButton.disabled = true;
    // Submit the form
    document.getElementById('createForm').submit();
  });
</script>
